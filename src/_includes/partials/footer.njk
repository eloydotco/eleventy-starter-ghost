<footer class="site-foot">
    <div class="site-foot-nav container">
        <div class="site-foot-nav-left">
            <a aria-current="page" class="" href="/">
                {{ site.title }}
            </a> &copy; 2022 |
            <a class="site-foot-nav-item" href="https://eloy.co" target="_blank" rel="noopener noreferrer">
                eloy.co
            </a>
        </div>
        {% if site.secondary_navigation %}
            <div class="site-foot-nav-right">
                {% for item in site.secondary_navigation %}
                    <a {% if page.url == item.url %}aria-current="page"{% endif %}  class="site-foot-nav-item" href="{{ item.url }}">
                        &nbsp;{{ item.title if item.title else item.label }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</footer>
